# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
TELEGRAM_TOKEN=your_telegram_bot_token_here
INITIAL_OWNER_ID=123456789
INITIAL_OWNER_USERNAME=your_username

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite: sqlite+aiosqlite:///./bot.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname
# MySQL: mysql+aiomysql://user:password@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./bot.db
# Optional: explicit DB path (auto-derived from DATABASE_URL if not set)
# DB_PATH=bot.db

# ============================================================================
# BOT MODE CONFIGURATION
# ============================================================================
# polling or webhook
DEFAULT_MODE=polling
# Required if using webhook mode
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================================
# ZOOM CONFIGURATION
# ============================================================================
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
# Optional: Zoom user ID or email for creating meetings on behalf of user
ZOOM_USER_ID=
ZOOM_USER_EMAIL=
ZOOM_AUDIENCE=https://api.zoom.us
ZOOM_CONTROL_MODE=cloud

# ============================================================================
# URL SHORTENER CONFIGURATION
# ============================================================================
# Default shortener provider: 'sid', 'bitly', or 'tinyurl'
DEFAULT_SHORTENER=tinyurl

# --- S.id Shortener ---
SID_ID=your_sid_id
SID_KEY=your_sid_key
SID_BASE_URL=https://api.s.id
SID_SHORT_BASE=https://s.id

# --- TinyURL Shortener ---
TINYURL_API_KEY=your_tinyurl_api_key
TINYURL_API_URL=https://api.tinyurl.com/create

# --- Bitly Shortener ---
BITLY_TOKEN=your_bitly_token
BITLY_API_URL=https://api-ssl.bitly.com/v4/shorten

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s,%(msecs)03d - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# DATA DIRECTORY
# ============================================================================
DATA_DIR=./data